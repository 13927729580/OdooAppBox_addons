<openerp>
  <data>
    <record model="app.view" id="appbox_stock.app_view_immediate_transfer">
      <field name="name">stock.immediate.transfer.view.form</field>
      <field name="res_model">stock.immediate.transfer</field>
      <field name="type">form</field>
      <field name="arch_original" type="xml">
        <form>
          <field name="id" attrs="{'invisible': true}"/>
          <div class="section" style="display:flex; justify-content: center; align-items: center; min-height: 100px;">
            <div style="font-weight: bold; font-size: 2rem;">
              你还没有输入完成数量，点击确认系统将处理所有已保留数量做为完成数量。
            </div>
          </div>
          <footer>
            <button name="process" barcode="BTN_CONFIRM" string="确认" type="object" bgcolor="#23d18b"/>
            <button type="cancel" barcode="BTN_CANCEL" string="取消" bgcolor="#ff3b2f"/>
          </footer>
        </form>
      </field>
    </record>
  </data>
</openerp>